<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="plugin_template"
    android:title="@string/app_name">

    <CheckBoxPreference
        android:key="status_plugin_sensory_wristband"
        android:defaultValue="false"
        android:persistent="true"
        android:summary="Activate/deactivate plugin" />

    <ListPreference
        android:defaultValue="30000"
        android:entries="@array/hr_frequency_readable"
        android:entryValues="@array/hr_frequency_values"
        android:key="frequency_heart_rate"
        android:persistent="true"
        android:title="Scanning heart rate frequency" />

    <ListPreference
        android:defaultValue="10000"
        android:entries="@array/basic_frequency_readable"
        android:entryValues="@array/basic_frequency_values"
        android:key="frequency_basic_data"
        android:persistent="true"
        android:title="Scanning basic information frequency" />

</PreferenceScreen>